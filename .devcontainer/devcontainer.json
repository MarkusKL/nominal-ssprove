{
  "name": "nominal-ssprove-devcontainer",
  "image": "ghcr.io/xtruder/nix-devcontainer:v1",
  "onCreateCommand": "mkdir -p ~/.config/nix && cp .devcontainer/nix.conf ~/.config/nix/ && nix-shell .devcontainer/codespace.nix --run 'make'",

  "customizations": {
    "vscode": {
      "settings": {
        "nixEnvSelector.nixFile": "${workspaceFolder}/codespace.nix"
      },
      "extensions": [
        "arrterian.nix-env-selector",
        "ejgallego.coq-lsp"
      ]
    }
  }
}
